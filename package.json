{
  "name": "friendlyrobot-monorepo",
  "private": true,
  "description": "@friendlyrobot's monorepo",
  "scripts": {
    "start": "nps",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --hoist",
    "prepublish": "lerna run prepublish",
    "prebuild": "npm run bootstrap",
    "test": "jest --config=jest.config.js --coverage --ci --env=jsdom",
    "//posttest": "nps release",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "clean": "find packages/ -name node_modules -or -name dist -or -name .npmrc | xargs rm -rf"
  },
  "author": "@friendlyrobot",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@friendlyrobot/cli-logger": "^1.0.4",
    "@friendlyrobot/eslint-config": "^1.3.2",
    "@types/jest": "^25.2.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-lodash": "^3.3.2",
    "camelcase": "^5.3.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.6",
    "husky": "^1.1.4",
    "jest": "^26.6.3",
    "jest-dot-reporter": "^1.0.14",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.21",
    "nps": "^5.10.0",
    "nps-utils": "^1.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-merge": "^5.7.3",
    "yargs": "^16.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {}
