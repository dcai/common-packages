  },
  "author": "@friendlyrobot",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@friendlyrobot/cli-logger": "^1.0.4",
    "@friendlyrobot/eslint-config": "^1.3.1",
    "@types/jest": "^25.2.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-lodash": "^3.3.2",
    "camelcase": "^5.3.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.6",
    "husky": "^1.1.4",
    "jest": "^26.5.2",
    "jest-dot-reporter": "^1.0.14",
    "lerna": "^3.22.1",
    "lint-staged": "^8.2.1",
    "lodash": "^4.17.20",
    "nps": "^5.10.0",
    "nps-utils": "^1.7.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-merge": "^4.2.2",
    "yargs": "^16.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {}
