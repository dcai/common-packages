{
  "name": "friendlyrobot-monorepo",
  "private": true,
  "description": "@friendlyrobot's monorepo",
  "scripts": {
    "start": "nps",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --hoist",
    "prebuild": "npm run bootstrap",
    "test": "jest --coverage --ci --env=jsdom",
    "posttest": "nps release",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "clean": "find packages/ -name node_modules -or -name dist -or -name .npmrc | xargs rm -rf"
  },
  "author": "@friendlyrobot",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^6.2.0",
    "@commitlint/config-conventional": "^6.1.3",
    "@friendlyrobot/cli-logger": "^1.x",
    "@friendlyrobot/eslint-config": "^1.x",
    "acorn": "^6.0.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-lodash": "^3.3.2",
    "camelcase": "^5.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.2",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.4.3",
    "lint-staged": "^8.0.5",
    "lodash": "^4.17.11",
    "mustache": "^2.3.0",
    "nps": "^5.9.3",
    "nps-utils": "^1.7.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "styled-components": "^3.4.10",
    "webpack": "^4.26.0",
    "yargs": "^12.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "jest": {
    "reporters": ["jest-junit"],
    "setupTestFrameworkScriptFile": "<rootDir>/jest-setup.js",
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "testMatch": ["**/packages/*/src/**/*.test.js"],
    "testPathIgnorePatterns": ["<rootDir>/packages/\\*\\*/dist/"],
    "coveragePathIgnorePatterns": ["<rootDir>/packages/(?:.+?)/dist/"],
    "coverageDirectory": ".coverage/"
  }
}
