{
  "packages": ["@packages/*"],
  "command": {
    "bootstrap": {
      "noSort": true,
      "concurrency": 10
    },
    "publish": {
      "allowBranch": ["master", "develop"],
      "yes": true,
      "conventionalCommits": true,
      "message": "chore(release): publish npm packages"
    }
  },
  "ignoreChanges": [
    "**/dist/**",
    "**/tests/**",
    "**/*.md",
    "**/package-lock.json"
  ],
  "version": "independent"
}
